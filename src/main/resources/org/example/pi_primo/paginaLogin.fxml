<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Hyperlink?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.Scene?>

<Scene xmlns="http://javafx.com/javafx/1" fx:id="mainScene" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.pi_primo.service.TelaLogin">
    <VBox prefHeight="400.0" prefWidth="640.0" spacing="20" alignment="CENTER">
        <children>
            <Label text="Alugues VK" textOverrun="CLIP">
                <font>
                    <Font name="System Bold Italic" size="38.0" />
                </font>
            </Label>

            <AnchorPane maxHeight="-1.0" maxWidth="-1.0" prefHeight="200.0" prefWidth="640.0" VBox.vgrow="ALWAYS">
                <children>
                    <VBox alignment="CENTER" spacing="15.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0">
                        <children>
                            <!-- Campos de Entrada -->
                            <HBox spacing="10.0" alignment="CENTER">
                                <Label text="Usuário:" />
                                <TextField fx:id="UsuarioTXT" prefHeight="30.0" prefWidth="250.0" />
                            </HBox>
                            <HBox spacing="10.0" alignment="CENTER">
                                <Label text="Senha:" />
                                <PasswordField fx:id="SenhaTXT" prefHeight="30.0" prefWidth="250.0" />
                            </HBox>

                            <!-- Hyperlink e Botões -->
                            <Hyperlink focusTraversable="false" text="Esqueceu a senha?" onAction="#RecuperarSenha" />

                            <!-- Botões -->
                            <HBox spacing="10.0" alignment="CENTER">
                                <Button mnemonicParsing="false" onAction="#onEntrarClicked" style="-fx-background-color: #0000FF; -fx-text-fill: white; -fx-pref-width: 100;" text="Entrar" />
                                <Button mnemonicParsing="false" onAction="#omCadastroClicked" style="-fx-background-color: #0000FF; -fx-text-fill: white; -fx-pref-width: 100;" text="Cadastrar" />
                            </HBox>
                        </children>
                    </VBox>
                </children>
            </AnchorPane>
        </children>
    </VBox>
</Scene>
