<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>


<BorderPane prefHeight="351.0" prefWidth="482.0" xmlns="http://javafx.com/javafx/23" xmlns:fx="http://javafx.com/fxml/1"
 fx:controller="org.example.pi_primo.TelaMenu">
   <top>
      <VBox BorderPane.alignment="CENTER">
         <BorderPane.margin>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
         </BorderPane.margin>
         <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0">
            <Button fx:id="meusProdutosButton" mnemonicParsing="false" onAction="#meusProdutosClicked"
                    text="Meus produtos" HBox.hgrow="ALWAYS"/>
            <Button fx:id="meusPedidosButton" mnemonicParsing="false" onAction="#meusPedidosClicked"
                    text="Meus pedidos" HBox.hgrow="ALWAYS"/>
            <Button fx:id="pesquisarProdutosButton" mnemonicParsing="false" onAction="#pesquisarProdutosClicked"
                    text="Pesquisar produtos" HBox.hgrow="ALWAYS"/>
            <Button fx:id="meuUsuarioButton" mnemonicParsing="false" onAction="#meuUsuarioClicked" text="Meu usuário"
                    HBox.hgrow="ALWAYS"/>
         </HBox>
      </VBox>
   </top>
   <center>
      <VBox alignment="CENTER" BorderPane.alignment="CENTER">
         <padding>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
         </padding>
         <Button fx:id="sairAplicacaoButton" mnemonicParsing="false" onAction="#sairApicacaoClicked"
                 text="Sair da aplicação" VBox.vgrow="ALWAYS">
            <VBox.margin>
               <Insets bottom="10.0"/>
            </VBox.margin>
         </Button>
         <Button fx:id="sairContaButton" mnemonicParsing="false" onAction="#sairContaClicked" text="Sair da conta"/>
      </VBox>
   </center>
</BorderPane>
