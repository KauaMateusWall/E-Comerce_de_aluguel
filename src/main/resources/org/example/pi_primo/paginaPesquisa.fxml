<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<?import javafx.scene.Scene?>

<Scene fx:id="mainScene" xmlns="http://javafx.com/javafx/23" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.pi_primo.service.TelaPesquisa">
   <BorderPane prefHeight="471.0" prefWidth="735.0">
      <top>
         <VBox BorderPane.alignment="CENTER">
            <BorderPane.margin>
               <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
            </BorderPane.margin>
            <children>
               <HBox alignment="CENTER_LEFT" prefHeight="34.0" prefWidth="496.0">
                  <children>
                     <Button fx:id="voltarButton" mnemonicParsing="false" onAction="#voltarClicked" prefHeight="57.0" prefWidth="126.0" text="Voltar">
                        <padding>
                           <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
                        </padding>
                        <HBox.margin>
                           <Insets right="30.0" />
                        </HBox.margin>
                     </Button>
                     <Label text="Pesquisa:">
                        <HBox.margin>
                           <Insets right="10.0" />
                        </HBox.margin>
                     </Label>
                     <TextField fx:id="pesquisaText" onKeyPressed="#pesquisarKeyPressed" prefHeight="39.0" prefWidth="250.0" />
                     <Button fx:id="pesquisarButton" mnemonicParsing="false" onAction="#pesquisarClicked" prefHeight="25.0" prefWidth="96.0" text="Pesquisar">
                        <HBox.margin>
                           <Insets left="20.0" />
                        </HBox.margin>
                     </Button>
                  </children>
               </HBox>
            </children>
         </VBox>
      </top>
      <center>
         <HBox alignment="CENTER" BorderPane.alignment="CENTER">
            <children>
               <TableView fx:id="produtosTableView" prefHeight="358.0" prefWidth="602.0">
                 <columns>
                    <TableColumn prefWidth="75.0" fx:id="IDColomn" text="Nome"/>
                   <TableColumn prefWidth="75.0" fx:id="nomeColumn" text="Nome"/>
                     <TableColumn prefWidth="75.0" fx:id="precoColumn" text="Preço" />
                    <TableColumn prefWidth="75.0" fx:id="tipoColomn" text="Lançamento" />
                 </columns>
                  <columnResizePolicy>
                     <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                  </columnResizePolicy>
                  <HBox.margin>
                     <Insets left="20.0" right="20.0" />
                  </HBox.margin>
               </TableView>
            </children>
         </HBox>
      </center>
   </BorderPane>
</Scene>